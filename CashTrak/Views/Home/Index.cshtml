@model List<CashRequest>
@{
    ViewData["Title"] = "Home Page";
    var incomingTotal = 0.00;
    var outgoingTotal = 0.00;
}

<div class="text-center">
    <div class="container">
        <div class="row">
            <div class="col">
                <h2 class="py-2">Ongoing Cash Requests</h2>
                <div class="container">
                    <div class="row">
                        <div class="col">
                            <h5 class="card-title">Name</h5>
                        </div>
                        <div class="col">
                            <h5 class="card-title">Amount</h5>
                        </div>
                        <div class="col">
                            <h5 class="card-title">Type</h5>
                        </div>
                        <div class="col">
                            <h5 class="card-title">Due Date</h5>
                        </div>
                    </div>
                </div>
                @foreach (var cashRequest in Model)
                {
                    if (cashRequest.Type == "Incoming")
                    {
                        incomingTotal += cashRequest.Amount;
                        <div id="accordion">
                            <div class="card">
                                <div class="card-header bg-success" id="headingOne_@cashRequest.CashRequestID" data-toggle="collapse" data-target="#collapseOne_@cashRequest.CashRequestID" aria-expanded="false" aria-controls="collapseOne_@cashRequest.CashRequestID">
                                    <div class="container">
                                        <div class="row">
                                            <div class="col">
                                                <h5 class="card-title">@cashRequest.Recipent</h5>
                                            </div>
                                            <div class="col">
                                                <p class="card-text">$@cashRequest.Amount</p>
                                            </div>
                                            <div class="col">
                                                <p class="card-text">@cashRequest.Type</p>
                                            </div>
                                            <div class="col">
                                                <p class="card-text">@cashRequest.DueDate.ToString("MM/dd/yyyy")</p>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div id="collapseOne_@cashRequest.CashRequestID" class="collapse" aria-labelledby="headingOne_@cashRequest.CashRequestID" data-parent="#accordion">
                                    <div class="card-body">
                                        <p class="card-text">@cashRequest.Description</p>
                                        <div class="container ">
                                            <div class="row">
                                                <div class="col">
                                                    <p class="card-text">Created on: <br />@cashRequest.CreationDate.ToString("MM/dd/yyyy") </p>
                                                </div>
                                                <div class="coL-6">
                                                    <button type="button" class="btn btn-primary">Finish</button>
                                                    <a type="button" class="btn btn-secondary" asp-controller="Edit" asp-action="Edit" asp-route-id="@cashRequest.CashRequestID">Edit</a>

                                                    <a class="btn btn-danger" data-toggle="modal" data-target="#deleteModal_@cashRequest.CashRequestID" onclick="Confirm(@cashRequest.CashRequestID)">Delete</a>
                                                    <!-- Incoming Requests Delete Modal -->
                                                    <div class="modal fade" id="deleteModal_@cashRequest.CashRequestID" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel" aria-hidden="true">
                                                        <div class="modal-dialog" role="document">
                                                            <div class="modal-content">
                                                                <div class="modal-header">
                                                                    <h5 class="modal-title" id="deleteModalLabel">Confirmation</h5>
                                                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                                        <span aria-hidden="true">&times;</span>
                                                                    </button>
                                                                </div>
                                                                <div class="modal-body">
                                                                    Are you sure you want to delete this Cash Request?
                                                                </div>
                                                                <div class="modal-footer">
                                                                    <button type="button" class="btn btn-secondary" data-dismiss="modal" onclick="Cancel()">Cancel</button>
                                                                    <a type="button" class="btn btn-danger" asp-controller="Delete" asp-action="Delete" asp-route-id="@cashRequest.CashRequestID">Delete</a>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col">
                                                    <p class="card-text">Status: <br /> Awaiting</p>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                    else
                    {
                        outgoingTotal += cashRequest.Amount;
                        <div id="accordion">
                            <div class="card">
                                <div class="card-header bg-danger" id="headingOne_@cashRequest.CashRequestID" data-toggle="collapse" data-target="#collapseOne_@cashRequest.CashRequestID" aria-expanded="false" aria-controls="collapseOne_@cashRequest.CashRequestID">
                                    <div class="container">
                                        <div class="row">
                                            <div class="col">
                                                <h5 class="card-title">@cashRequest.Recipent</h5>
                                            </div>
                                            <div class="col">
                                                <p class="card-text">$@cashRequest.Amount</p>
                                            </div>
                                            <div class="col">
                                                <p class="card-text">@cashRequest.Type</p>
                                            </div>
                                            <div class="col">
                                                <p class="card-text">@cashRequest.DueDate.ToString("MM/dd/yyyy")</p>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div id="collapseOne_@cashRequest.CashRequestID" class="collapse" aria-labelledby="headingOne_@cashRequest.CashRequestID" data-parent="#accordion">
                                    <div class="card-body">
                                        <p class="card-text">@cashRequest.Description</p>
                                        <div class="container ">
                                            <div class="row">
                                                <div class="col">
                                                    <p class="card-text">Created on: <br />@cashRequest.CreationDate.ToString("MM/dd/yyyy") </p>
                                                </div>
                                                <div class="coL-6">
                                                    <button type="button" class="btn btn-primary">Finish</button>
                                                    <a type="button" class="btn btn-secondary" asp-controller="Edit" asp-action="Edit" asp-route-id="@cashRequest.CashRequestID">Edit</a>

                                                    <a class="btn btn-danger" data-toggle="modal" data-target="#deleteModal_@cashRequest.CashRequestID" onclick="Confirm(@cashRequest.CashRequestID)">Delete</a>
                                                    <!-- Outgoing Requests Delete Modal -->
                                                    <div class="modal fade" id="deleteModal_@cashRequest.CashRequestID" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel" aria-hidden="true">
                                                        <div class="modal-dialog" role="document">
                                                            <div class="modal-content">
                                                                <div class="modal-header">
                                                                    <h5 class="modal-title" id="deleteModalLabel">Confirmation</h5>
                                                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                                        <span aria-hidden="true">&times;</span>
                                                                    </button>
                                                                </div>
                                                                <div class="modal-body">
                                                                    Are you sure you want to delete this Cash Request?
                                                                </div>
                                                                <div class="modal-footer">
                                                                    <button type="button" class="btn btn-secondary" data-dismiss="modal" onclick="Cancel()">Cancel</button>
                                                                    <a type="button" class="btn btn-danger" asp-controller="Delete" asp-action="Delete" asp-route-id="@cashRequest.CashRequestID">Delete</a>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col">
                                                    <p class="card-text">Status: <br /> Awaiting</p>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }
            </div>
            <div class="col">
                <h3 class="py-4">Total Money Owed: $@Math.Round(incomingTotal, 2)</h3>
                <h3 class="py-4">Total Money Due: $@Math.Round(outgoingTotal, 2)</h3>
                <a class="btn btn-primary" asp-controller="Functionality" asp-action="Create">Create New Cash Request</a>
